<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:drawablePadding="3dp"
            android:text="@string/the_counter"
            android:textColor="@color/ddd"
            android:textSize="16sp"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/ic_iconly_light_profile"
            app:layout_constraintBottom_toTopOf="@+id/price_text"
            app:layout_constraintEnd_toStartOf="@+id/divider10"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/phone_number"
            app:layout_constraintTop_toBottomOf="@+id/phone_number" />

        <TextView
            android:id="@+id/price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:drawablePadding="3dp"
            android:text="30"
            android:textColor="@color/gray"
            android:textSize="14sp"
            app:drawableStartCompat="@drawable/ic_icon_awesome_money_bill_wave_alt"
            app:layout_constraintBottom_toTopOf="@+id/date_text"
            app:layout_constraintEnd_toEndOf="@+id/name_text"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/name_text"
            app:layout_constraintTop_toBottomOf="@+id/name_text" />

        <TextView
            android:id="@+id/phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:drawablePadding="3dp"
            android:text="01011455258"
            android:textColor="@color/gray"
            android:textSize="14sp"
            app:drawableStartCompat="@drawable/ic_iconly_light_outline_ticket"
            app:layout_constraintBottom_toTopOf="@+id/name_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/photo_id" />

        <TextView
            android:id="@+id/date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawablePadding="3dp"
            android:text="26/05/2021"
            android:textColor="@color/gray"
            android:textSize="14sp"
            app:drawableStartCompat="@drawable/ic_iconly_light_calendar"
            app:layout_constraintBottom_toBottomOf="@+id/photo_id"
            app:layout_constraintEnd_toEndOf="@+id/phone_number"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/phone_number"
            app:layout_constraintTop_toBottomOf="@+id/price_text" />

        <ImageView
            android:id="@+id/photo_id"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/back_ground_bordar"
            android:scaleType="center"
            android:src="@drawable/ic_icon_awesome_images"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.95"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.050000012" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="@string/bill_image"
            android:textColor="@color/ddd"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView23"
            app:layout_constraintEnd_toEndOf="@+id/photo_id"
            app:layout_constraintStart_toStartOf="@+id/photo_id"
            app:layout_constraintTop_toBottomOf="@+id/photo_id"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:text="@string/the_details"
            android:textSize="16sp"
            android:textColor="@color/ddd"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/details"
            app:layout_constraintEnd_toEndOf="@+id/photo_id"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/date_text"
            app:layout_constraintTop_toBottomOf="@+id/textView24" />

        <TextView
            android:id="@+id/details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/gray"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/photo_id"
            app:layout_constraintStart_toStartOf="@+id/date_text"
            app:layout_constraintTop_toBottomOf="@+id/textView23" />

        <Button
            android:id="@+id/edit_bt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/back_ground_bordar"
            android:drawableStart="@drawable/ic_edit"
            android:text="@string/edit"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textColor="@color/gray"
            android:paddingStart="100dp"
            android:paddingEnd="100dp"
            app:layout_constraintBottom_toTopOf="@+id/print_bt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/print_bt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/back_ground_ddd_bordar"
            android:text="@string/print"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textColor="@color/ddd"
            android:paddingStart="100dp"
            android:paddingEnd="100dp"
            android:drawableStart="@drawable/ic_print"
            app:layout_constraintBottom_toTopOf="@+id/delete_bt"
            app:layout_constraintEnd_toEndOf="@+id/edit_bt"
            app:layout_constraintStart_toStartOf="@+id/edit_bt" />

        <Button
            android:id="@+id/delete_bt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/back_ground_red_bordar"
            android:text="@string/delete"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textColor="@color/red"
            android:paddingStart="100dp"
            android:paddingEnd="100dp"
            android:drawableStart="@drawable/ic_trash"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/print_bt"
            app:layout_constraintStart_toStartOf="@+id/print_bt" />

        <ProgressBar
            android:id="@+id/loader"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>